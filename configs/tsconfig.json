{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "ES2015",
      "es2016"
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ],
  "compileOnSave": false
}
